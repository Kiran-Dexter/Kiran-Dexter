$secpasswd = ConvertTo-SecureString "PlainTextPassword" -AsPlainText -Force
$yourcreds = New-Object System.Management.Automation.PSCredential ("username", $secpasswd)

Start-BitsTransfer -DisplayName DMFweeklytrans -ProxyUsage AutoDetect -Source $source -Destination $destination -Authentication Basic -Credential $yourcreds -Asynchronous 
